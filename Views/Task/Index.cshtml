@model IEnumerable<MiniProject_AspNetCoreTaskManager.Models.TaskItem>
@{
    ViewData["Title"] = "Tasks";
    Layout = "_Layout";
}

<h2 class="mb-3">📌 Task List</h2>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Priority</th>
            <th>Created At</th>
            <th>Due Date</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr class="@(task.IsCompleted ? "table-success" : "")">
                <td>@task.Title</td>
                <td>@task.Priority</td>
                <td>@task.CreatedAt.ToString("dd-MMM-yyyy HH:mm")</td>
                <td>@(task.DueDate?.ToString("dd-MMM-yyyy") ?? "No Deadline")</td>
                <td>@(task.IsCompleted ? "✅ Completed" : "⏳ Pending")</td>
                <td>
                    @if (!task.IsCompleted)
                    {
                        <a asp-action="MarkComplete" asp-route-id="@task.Id" class="btn btn-sm btn-success">Mark Complete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
